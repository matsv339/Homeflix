angular.module('homeflix', [
	'ngRoute',
	'loginModule',
	'userModule',
	'movieModule',
	'navigationModule',
	'playerModule',
	'homeModule',
	'sessionModule',
	'ui.bootstrap',
	'newsModule',
	'ngSanitize'
]);

angular.module('homeflix').config(['$routeProvider',
  	function($routeProvider) {
	    $routeProvider.
	    	when('/home', {
	        	templateUrl: '<%= asset_path("home.html")%>',
	        	controller: 'HomeController'
	      	}).
	      	when('/users', {
	        	templateUrl: '<%= asset_path("users.html")%>',
	        	controller: 'UserController'
	      	}).
	      	when('/test', {
	        	templateUrl: 'assets/test.html',
	        	controller: 'UserController'
	      	}).
	      	when('/movies', {
	      		templateUrl: '<%= asset_path("movie-list.html")%>',
	        	controller: 'MovieListController'
	      	}).
	      	when('/movies/:imdb_id', {
	      		templateUrl: '<%= asset_path("movie-detail.html")%>',
	        	controller: 'MovieDetailedController'
	      	}).
	      	when('/favorits', {
	      		templateUrl: '<%= asset_path("favorits.html")%>',
	        	controller: 'FavoritListController'
	      	}).
	      	when('/player/:imdb_id', {
	      		templateUrl: '<%= asset_path("player.html")%>',
	        	controller: 'PlayerController'
	      	}).
			when('/login', {
	      		templateUrl: '<%= asset_path("login.html")%>',
	        	controller: 'SessionsController'
	      	}).
	      	when('/news', {
	      		templateUrl: '<%= asset_path("news.html")%>',
	        	controller: 'NewsController'
	      	}).

	      	otherwise({
	        	redirectTo: '/home'
	      	});
  	}
]);

