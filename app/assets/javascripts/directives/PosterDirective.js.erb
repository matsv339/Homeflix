//Inserts a poster from IMDB given a ID as an attribute.
angular.module('imdbModule').directive('ngPoster', function () {
	return {
		restrict: 'EA',
		scope: true,
		templateUrl: '<%= asset_path("poster.html")%>',
		controller: 'IMDBController',
		link: function(scope, elem, attrs, ctrl) {
			scope.getMovie(attrs.imdbid);
		},
		replace: true
	}
});